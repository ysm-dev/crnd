{
  "name": "crnd",
  "version": "0.1.0",
  "private": true,
  "description": "Agent-first CLI for cron scheduling and process management",
  "type": "module",
  "workspaces": [
    "packages/@crnd/*"
  ],
  "scripts": {
    "dev": "bun run src/cli/main.ts",
    "build": "bun build ./src/cli/main.ts --compile --outfile dist/crnd",
    "generate-packages": "bun run scripts/generate-packages.ts",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check .",
    "typecheck": "tsgo --noEmit",
    "test": "bun test"
  },
  "keywords": [
    "cron",
    "scheduler",
    "daemon",
    "jobs",
    "cli",
    "process-manager"
  ],
  "author": "ysm-dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ysm-dev/crnd.git"
  },
  "bugs": {
    "url": "https://github.com/ysm-dev/crnd/issues"
  },
  "homepage": "https://github.com/ysm-dev/crnd#readme",
  "dependencies": {
    "@hono/zod-validator": "0.7.6",
    "@iarna/toml": "2.2.5",
    "citty": "0.2.0",
    "consola": "3.4.2",
    "croner": "9.1.0",
    "drizzle-orm": "0.45.1",
    "drizzle-zod": "0.8.3",
    "env-paths": "4.0.0",
    "hono": "4.11.7",
    "ms": "2.1.3",
    "ulid": "3.0.2",
    "zod": "4.3.6",
    "zod-validation-error": "5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@types/ms": "2.1.0",
    "@typescript/native-preview": "7.0.0-dev.20260131.1",
    "bun-types": "1.3.8",
    "drizzle-kit": "0.31.8"
  }
}
